@{
}
@model EFTask.Models.ViewModel.RegisterViewModel

<h1>
    Register new User
</h1>
<form method="post" action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class=" row">
        <div class=" col-12">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Country"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ConfrimPassword"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="ConfrimPassword" class="form-control" />
                <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
            </div>


            <div class="col-4">
                <div class="form-group mt-4">
                    <input type="submit" class="btn btn-primary" value="Register" />
                    @*<a asp-controller="Order" asp-action="IndexOrder" class="btn btn-danger">Back</a>*@
                </div>
            </div>
        </div>
    </div>
</form>
