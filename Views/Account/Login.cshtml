@model EFTask.Models.ViewModel.LoginViewModel

<h1>
    Login
</h1>
<form method="post" action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class=" row">
        <div class=" col-12">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Rememberme"></label>
            </div>
            <div class="col-4">
                <input type="checkbox" asp-for="Rememberme" class="form-control" />
                <span asp-validation-for="Rememberme" class="text-danger"></span>
            </div>


            <div class="col-4">
                <div class="form-group mt-4">
                    <input type="submit" class="btn btn-primary" value="Login" />
                    <div>
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
