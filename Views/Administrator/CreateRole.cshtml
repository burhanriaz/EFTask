@model CreateRoleViewModel

<h1>
    Register new User
</h1>
<form method="post" action="CreateRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class=" row">
        <div class=" col-12">
            <div class="col-2">
                <label asp-for="RoleName"></label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
      

            <div class="col-4">
                <div class="form-group mt-4">
                    <input type="submit" class="btn btn-primary" value="Create Role" />
                    <a asp-controller="Administrator" asp-action="RolesList" class="btn btn-danger">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
