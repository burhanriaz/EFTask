@model EFTask.Models.Order

<h1>
    Create/Update Order<h1>
        <form method="post" action="CreateOrder">
           
            <div class=" row">
                <div class=" col-12">
                    <div class="col-2">
                        <label asp-for="OrderName"></label>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="OrderName" class="form-control" />
                        <span asp-validation-for="OrderName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-4">
                            <input type="submit" class="btn btn-primary" @* asp-for="Item.Name"*@ value="Submit" />
                            <a asp-action="IndexOrder" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
