@model IEnumerable<EFTask.Models.ViewModel.OrderViewModel>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Items</h2>
    </div>  
    <br />  <br />
    <div class="col-12">
        <table class="table table-striped  border" id="tblOrders">
            <tr class="table-info">
                <th class="col-6">
                    @Html.DisplayNameFor(m=>m.Items)
                </th>
                <th class="col-6">
                    @Html.DisplayNameFor(m=>m.Price)
                </th>
                <th class="col-6">
                    @Html.DisplayNameFor(m=>m.UnitType)
                </th>
                <th class="col-6 text-center">
                    Buy Now
                <th />
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m=>item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.UnitType)
                    </td>
                    <td>
                        <form asp-action="BuyItems" asp-controller="Order" method="post">
                            <input type="hidden" name="ItemId" asp-for="@item.ItemId" />
                            <input type="hidden" name="OrderId" asp-for="@item.OrderId" />
                            <input type="hidden" name="UnitId" asp-for="@item.UnitId" />
                            <input id="Quantity" name="Quantity" asp-for="@item.Quantity" value="@item.Quantity" type="number" min="1" step="1" class="btn btn-outline-info" style="width:80px; height:30px" />
                            <input name="submit" type="submit" style="width:200px" value="Buy Now" class="btn btn-success" />
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>



