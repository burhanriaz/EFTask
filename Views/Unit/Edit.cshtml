@model EFTask.Models.Unit;
<br />
<h1> Update Company Brand</h1>
<form method="post" action="Edit">
    <input hidden asp-for="UnitId" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="UnitType"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="UnitType" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.UnitId"  value="Update" />
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>

</form>