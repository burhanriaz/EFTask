@model EFTask.Models.Unit;
<br />
<h1> Add/Update Units here</h1>
<form method="post" action="Create">
    <input hidden asp-for="UnitId" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="UnitType"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="UnitType" class="form-control" />
            <span asp-validation-for="UnitType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-for="UnitType" value="Create" />
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>